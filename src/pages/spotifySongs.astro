---
import '../styles/global.css'
import MainBackgroundLayoutWithoutFooter from '../layouts/MainBackgroundLayoutWithoutFooter.astro';
import Greeting from '../components/Greeting';
import SpotifySongsReact from '../components/SpotifySongsReact';

const pageTitle = "A live tracker of what I am listening to on Spotify";
const pageSubHeading = "Honestly, this does a better job of telling you more about my current mood than my music taste, but no matter.";
---

<MainBackgroundLayoutWithoutFooter pageTitle={pageTitle} pageSubHeading={pageSubHeading}>
<!-- <Greeting /> -->
<SpotifySongsReact client:load />
</MainBackgroundLayoutWithoutFooter>
<style >
.spotifyBar {
    content: '';
    position: relative;

/*  		padding: 1vh; */
    height: 0.5vh;
    overflow: hidden;
    /* Required to create a pseudo-element */
    inset: 0;
    /* Align it to the edges of .bar */
    background-color: green;
    /* Color of the progress bar */
    width: 0%;
    /* Start width as 0% */
    height: 1vh;
    /* Full height to match the parent */
    /* animation: fill 100s linear forwards;
    animation-delay: -90s; */
    /* Adjust start delay */
    border-radius: 5px;
        width: 100%; /* or any specific width */
        height: 5px; /* or any specific height */
        background-color: #1db954; /* Spotify green color */
        position: relative;
}

@keyframes fill {
    from {
        width: 0%;
    }

    to {
        width: 100%;
    }
}
</style>